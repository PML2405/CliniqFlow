rules_version = '2';

// Firebase Storage security rules for CliniqFlow
service firebase.storage {
  match /b/{bucket}/o {
    // Case sheet attachments: /case_sheets/{caseSheetId}/{fileName}
    match /case_sheets/{caseSheetId}/{fileName} {
      // Allow authenticated users to read attachments
      allow read: if request.auth != null;
      
      // Allow authenticated users to upload attachments
      // Restrict file size to 10MB and validate content types
      allow write: if request.auth != null
                   && request.resource.size < 10 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*|application/pdf|text/.*');
    }
    
    // Deny all other paths by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
